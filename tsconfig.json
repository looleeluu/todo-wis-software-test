{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@api": ["api/index"],
      "@api/*": ["api/*"],
      "@common": ["common/index"],
      "@common/*": ["common/*"],
      "@store": ["store/index"],
      "@store/*": ["store/*"],
      "@ui": ["ui/index"],
      "@ui/*": ["ui/*"]
    }
  },
  "baseUrl": "src/",
  "include": ["./src/**/*"]
}
